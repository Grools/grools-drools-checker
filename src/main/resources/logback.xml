<configuration>
    <contextName>GROOLS</contextName>
    <jmxConfigurator />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level - %msg%n</pattern>
        </encoder>
    </appender>
    <!--<logger name="org.drools" level="trace"/>-->
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>